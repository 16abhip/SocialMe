<link rel="stylesheet" href="/css/home.css" />

<div id="home-container">
  <section id="feed-posts">
    <h3>Posts</h3>
    <% if(locals.user){ %>
    <form action="/post/create" id="new-post-form" method="post">
      <textarea
        name="content"
        cols="50"
        rows="5"
        placeholder="Whats on your mind, <%= user.name %>?"
      ></textarea>
      <input type="submit" value="Add to your Post" />

    </form>
    <% } %>
    <div id="posts-list-container">
      <ul>
        <% for(post of posts){ %> 
            <%- include('_post') -%> 
         <% } %>
      </ul>
    </div>
  </section>

  <section id="user-friends">
    <h3>Contacts</h3>
    <% for(u of all_user) { %>
    <p>
      <a href="/user/profile/<%= u.id %>"><%= u.name %></a>
    </p>
    <% } %>
  </section>
</div>
